                                            </Frame>
                                        </Grid>
                                    </Frame>
                                </Grid>
                            </Frame>
                            <Frame x:Name="chikenF" Grid.Column="3" HasShadow="True" CornerRadius="10" VerticalOptions="CenterAndExpand" HeightRequest="205" Margin="0, 10, 0, 10">
